{
	"name": "@authlocal/authlocal",
	"version": "0.2.0-17",
	"description": "User-sovereign login system",
	"main": "./x/index.web.js",
	"type": "module",
	"files": [
		"x",
		"s"
	],
	"exports": {
		".": "./x/index.web.js",
		"./core": "./x/index.core.js",
		"./*": "./*"
	},
	"scripts": {
		"build": "rm -rf x && run-s _code _ssg _ln",
		"test": "node x/tests.test.js --verbose",
		"start": "run-p _http _watch _test:watch",
		"count": "find s -path '*/_archive' -prune -o -name '*.ts' -exec wc -l {} +",
		"devlinks-slate": "rm -rf node_modules/@benev/slate && ln -s \"$(realpath ../../@benev/slate)\" node_modules/@benev/slate",
		"_clean": "rm -rf x",
		"_code": "turtle build --out=x",
		"_ssg": "turtle ssg --in=s,x --out=x",
		"_test:watch": "node --watch x/tests.test.js",
		"_http": "http-server x",
		"_watch": "turtle watch --in=s,x --out=x -v",
		"_ln": "run-s _ln:s _ln:assets",
		"_ln:s": "ln -s \"$(realpath s)\" x/s",
		"_ln:assets": "ln -s \"$(realpath assets)\" x/assets"
	},
	"dependencies": {
		"@benev/slate": "^0.3.0",
		"@e280/science": "^0.0.4",
		"@e280/stz": "^0.0.0-7",
		"@noble/ed25519": "^2.2.3",
		"renraku": "^0.5.0-8"
	},
	"devDependencies": {
		"@benev/turtle": "^0.6.9",
		"http-server": "^14.1.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.8.3"
	},
	"license": "MIT",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"keywords": [
		"auth",
		"zero-cost",
		"privacy-focused",
		"user-sovereign",
		"clientside",
		"federated",
		"decentralized",
		"protocol",
		"free",
		"open-source",
		"foss"
	]
}
